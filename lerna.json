{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "0.0.0",
  "packages": [
    "deploy/*",
    "packages/*"
  ],
  "command": {
    "version": {
      "exact": true,
      "includeMergedTags": true,
      "allowBranch": [
        "master",
        "feature/*",
        "feat/*",
        "bugfix/*",
        "fix/*",
        "hotfix/*",
        "fix_*"
      ],
      "message": "chore(release): publish"
    }
  }
}
